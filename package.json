{
  "name": "mt-drivevision-lib",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "postbuild": "node -e \"fs=require('fs');fs.copyFileSync('appsscript.json','dist/appsscript.json')\"",
    "push": "clasp push --force",
    "deploy:head": "npm run build && npm run push",
    "version:make": "clasp version -m \"auto: $(git rev-parse --short HEAD)\""
  },
  "devDependencies": {
    "@types/google-apps-script": "^1.0.83",
    "typescript": "^5.6.3"
  }
}
